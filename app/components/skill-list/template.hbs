{{log 'character:' character}}

<div class="ui two column doubling  grid container">
<div class="column">
  <h3>Base</h3>
  <table class="ui very basic compact  table">
    <thead class="mobile hidden">
      <tr><th class="single line six wide">Habilidades</th>
      <th class="one wide" >Entrenado</th>
      <th class="one wide">PD</th>
      <th class="one wide" >Nivel</th>
      <th class="one wide">Mod</th>
    </tr></thead>
    <tbody>
      {{#each baseSkills as |skill|}}
          {{skill-item skill=skill}}
      {{/each}}
    </tbody>
  </table>
</div>

  <div class="column">
  <h3>Opcionales</h3>
    <table class="ui very basic compact  table">
      <thead class="mobile hidden">
        <tr><th class="single line six wide">Habilidades</th>
        <th class="one wide">Entrenado</th>
        <th class="one wide">PD</th>
        <th class="one wide">Nivel</th>
        <th class="one wide">Mod</th>
      </tr></thead>
      <tbody>
        {{#each optionalSkills as |skill index|}}
            {{optional-skill-item skill=skill options=skillOptions currentSkill=index}}
        {{/each}}
      </tbody>
    </table>
  </div>

  <div class="column">
    <h3>NT</h3>
    <table class="ui very basic compact  table ">
      <thead class="mobile hidden">
        <tr><th class="single line six wide">Habilidades</th>
        <th class="one wide">Entrenado</th>
        <th class="one wide">PD</th>
        <th class="one wide">Nivel</th>
        <th class="one wide">Mod</th>
      </tr></thead>
      <tbody>
        {{#each NTSkills as |skill|}}
            {{skill-item skill=skill}}
        {{/each}}
      </tbody>
    </table>
  </div>
</div>
