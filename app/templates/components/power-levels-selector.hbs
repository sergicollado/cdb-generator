<div class="ui one column grid">
    <div class="column">
      <div class="field">
        <label>Nivel de Poder</label>
        {{#ui-dropdown class="selection ui input fluid" onChange=(action "select")}}
            <div class="default text">Nivel de Poder</div>
            <i class="dropdown icon"></i>
            <div class="menu">
            {{#each powerLevels.list as |level index|}}
                <div class="item" data-value="{{index}}">
                {{level.name}}
                </div>
            {{/each}}
            </div>
        {{/ui-dropdown}}
      </div>
    </div>
    {{#if character.powerLevel}}
    <div class="column">
      <div class="ui segment">
        <p>
          {{character.powerLevel.description}}
        </p>
       </div>
     </div>
   {{/if}}
</div>
